<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.dorado.dorado_labquiz.MainActivity">


    <TextView
        android:background="@drawable/fam"
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp" />

    <TextView
        android:background="@drawable/auth"
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:textSize="22dp" />

    <EditText
        android:paddingLeft="5dp"
        android:id="@+id/et_Author"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:hint="Enter author's name here"
        android:textSize="19sp" />

    <TextView
        android:background="@drawable/quote"
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/et_Author"
        android:layout_marginTop="40dp"
        android:textSize="22sp" />

    <EditText
        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:id="@+id/et_Quote"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/et_Author"
        android:layout_alignStart="@+id/et_Author"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:gravity="top|left|center"
        android:hint="Enter quotation here"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:onClick="saveQuote"
        android:text="SAVE"
        android:layout_below="@+id/et_Quote"
        android:layout_alignLeft="@+id/et_Quote"
        android:layout_alignStart="@+id/et_Quote" />

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_Quote"
        android:layout_alignRight="@+id/et_Quote"
        android:layout_alignTop="@+id/btn_Save"
        android:onClick="nextPage"
        android:text="NEXT" />


</RelativeLayout>
